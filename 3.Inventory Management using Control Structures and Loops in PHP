    <?php
    $items = ["Pen" => 20, "Notebook" => 15, "Eraser" => 10];
    $prices = ["Pen" => 5, "Notebook" => 20, "Eraser" => 3];
    $totalInventoryValue = 0;

    foreach ($items as $item => $qty) {
        $price = $prices[$item];
        $value = $qty * $price;
        $totalInventoryValue += $value;

        echo "<tr>";
        echo "<td>$item</td>";
        echo "<td>$qty</td>";
        echo "<td>â‚¹$price</td>";
        echo "<td>â‚¹$value</td>";
        
        if ($qty < 15) {
            echo "<td class='restock'>Restock needed</td>";
        } else {
            echo "<td class='ok'>Sufficient</td>";
        }
        echo "</tr>";
    }
    ?>
  </table>

  <div class="summary">
    <?php echo "Total Inventory Value: â‚¹$totalInventoryValue"; ?>
