<?php
if ($_SERVER['REQUEST_METHOD'] === 'POST') {
    $name = trim($_POST['name'] ?? '');

    if (empty($name)) {
        $error = "❌ Name is required.";
    } else {
        header('Location: success.php');
        exit;
    }
}
?>
<!DOCTYPE html>
<html>
<head>
    <title>Server Side Validation</title>
    <style>
        body {font-family: Arial, sans-serif; background:#f8f9fa; display:flex; justify-content:center; align-items:center; height:100vh;}
        .form-box {background:#fff; padding:25px; border-radius:10px; box-shadow:0 4px 8px rgba(0,0,0,0.1); width:300px; text-align:center;}
        h2 {color:#007bff;}
        input[type=text] {width:90%; padding:8px; margin:10px 0; border:1px solid #ccc; border-radius:5px;}
        button {padding:8px 15px; border:none; background:#007bff; color:#fff; border-radius:5px; cursor:pointer;}
        button:hover {background:#0056b3;}
        .error {color:red; margin-top:10px; font-weight:bold;}
    </style>
</head>
<body>
    <div class="form-box">
        <h2>Enter Your Name</h2>
        <form method="post">
            <input type="text" name="name" placeholder="Enter name" />
            <br>
            <button type="submit">Submit</button>
        </form>
        <?php if (!empty($error)) echo "<p class='error'>$error</p>"; ?>
    </div>
</body>
</html>

