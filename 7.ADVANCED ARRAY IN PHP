    <title>Employee Salary Details</title>
    <style>
        body {
            font-family: Arial, sans-serif;
            background: #f4f4f9;
            padding: 20px;
        }
        h2 {
            text-align: center;
            color: #333;
        }
        .employee-card {
            background: #fff;
            padding: 15px;
            margin: 15px auto;
            border-radius: 8px;
            box-shadow: 0 0 8px rgba(0,0,0,0.1);
            width: 300px;
        }
        .employee-card strong {
            color: #007BFF;
        }
        .payroll-summary {
            margin-top: 20px;
            padding: 15px;
            background: #e9f7ef;
            border: 1px solid #2ecc71;
            border-radius: 6px;
            width: 320px;
            margin-left: auto;
            margin-right: auto;
            text-align: center;
            font-weight: bold;
        }
    </style>
