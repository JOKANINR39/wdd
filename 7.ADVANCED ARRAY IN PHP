<body>

<h2>Employee Salary Details</h2>

<?php
$employees = [
    ["name" => "John", "salary" => 5000],
    ["name" => "Jane", "salary" => 6000],
    ["name" => "Alice", "salary" => 7000],
];

$totalPayroll = 0;

foreach ($employees as $emp) {
    $name = $emp['name'];
    $salary = $emp['salary'];

    // Calculate bonus
    $bonus = ($salary > 5500) ? $salary * 0.10 : $salary * 0.05;
    $netSalary = $salary + $bonus;
    $totalPayroll += $netSalary;

    echo "<div class='employee-card'>";
    echo "<p><strong>Employee:</strong> $name</p>";
    echo "<p><strong>Base Salary:</strong> \$$salary</p>";
    echo "<p><strong>Bonus:</strong> \$$bonus</p>";
    echo "<p><strong>Net Salary:</strong> \$$netSalary</p>";
    echo "</div>";
}

echo "<div class='payroll-summary'>";
echo "Total Payroll (including bonuses): \$$totalPayroll";
echo "</div>";
?>

</body>
